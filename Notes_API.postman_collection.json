{
	"info": {
		"name": "Notes API",
		"description": "RESTful API for Notes management",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000/api/v1"
		},
		{
			"key": "noteId",
			"value": "1"
		}
	],
	"item": [
		{
			"name": "Create Note",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    pm.environment.set('noteId', response.id);",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"My First Note\",\n    \"content\": \"This is the content of my first note\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/notes",
					"host": ["{{baseUrl}}"],
					"path": ["notes"]
				}
			}
		},
		{
			"name": "Get All Notes",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/notes",
					"host": ["{{baseUrl}}"],
					"path": ["notes"]
				}
			}
		},
		{
			"name": "Get Note by ID",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/notes/{{noteId}}",
					"host": ["{{baseUrl}}"],
					"path": ["notes", "{{noteId}}"]
				}
			}
		},
		{
			"name": "Update Note",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Updated Note Title\",\n    \"content\": \"Updated content for the note\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/notes/{{noteId}}",
					"host": ["{{baseUrl}}"],
					"path": ["notes", "{{noteId}}"]
				}
			}
		},
		{
			"name": "Delete Note",
			"request": {
				"method": "DELETE",
				"url": {
					"raw": "{{baseUrl}}/notes/{{noteId}}",
					"host": ["{{baseUrl}}"],
					"path": ["notes", "{{noteId}}"]
				}
			}
		}
	]
}